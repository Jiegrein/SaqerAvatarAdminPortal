<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SaqerAvatarAdminPortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SaqerAvatarAdminPortal.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
    <div class="header-content">
        <div class="logo">
            <i class="fas fa-robot"></i>
            <h1>Chatbot Analytics</h1>
        </div>
        
        <!-- Navigation Menu in Header -->
        <nav class="header-nav">
            <ul class="nav-menu">
                <li class="nav-item @(ViewContext.RouteData.Values["page"].ToString() == "/Index" ? "active" : "")">
                    <a asp-page="/Index" class="nav-link">
                        <i class="fas fa-chart-bar"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item @(ViewContext.RouteData.Values["page"].ToString() == "/ChatsHistory" ? "active" : "")">
                    <a asp-page="/ChatsHistory" class="nav-link">
                        <i class="fas fa-history"></i>
                        <span>Chats History</span>
                    </a>
                </li>
            </ul>
        </nav>
        
        <div class="user-info">
            <i class="fas fa-user-circle"></i>
            <span>Admin Panel</span>
        </div>
    </div>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SaqerAvatarAdminPortal - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>